.row
  .col
    %h1 Last 12 months usage
    %span.explore-link= link_to 'Explore tests', test_results_path("device.uuid": @device.uuid)
.row
  .col.pe-7
    = react_component('BarChart', data: @tests_histogram, height: 300, y_label: "Tests Run")
  .col
    = react_component('PieChart', data: @tests_by_name, height: 250, label: "Tests Run")

%hr

.row
  .col
    %h1 Last 12 months error rate by operator
.row
  .col.pe-7
    = react_component('BarChart', data: @errors_histogram, height: 300, y_label: "Tests with Errors", x_labels: @error_users)
  .col
    = react_component('PieChart', data: @errors_by_code, height: 250, label: "Errors")
